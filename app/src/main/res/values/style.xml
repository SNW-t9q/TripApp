<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavBottomTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="in_NavBottomTextStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/indicator_color</item>
    </style>

    <style name="TopRoundedImageStyle">
        <!-- cornerFamily 通常是 'rounded'；cornerSizeTopLeft/TopRight 指定角半径 -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="AllRoundedImageStyle">
        <!-- cornerFamily 通常是 'rounded'；cornerSizeTopLeft/TopRight 指定角半径 -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="LeftRoundedImageStyle">
        <!-- cornerFamily 通常是 'rounded'；cornerSizeTopLeft/TopRight 指定角半径 -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>



</resources>